<?xml version='1.0' encoding='utf-8'?>
<widget id="com.continuetogive.www" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Hello Cordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="GapBetweenPages" value="0" />
    <preference name="PageLength" value="0" />
    <preference name="PaginationBreakingMode" value="page" />
    <preference name="PaginationMode" value="unpaginated" />
    <feature name="LocalStorage">
        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <feature name="UniMage">
        <param name="ios-package" value="CDVUniMag" />
    </feature>
    <feature name="Console">
        <param name="ios-package" value="CDVLogger" />
    </feature>
    <feature name="Device">
        <param name="ios-package" value="CDVDevice" />
    </feature>
    <feature name="InAppBrowser">
        <param name="ios-package" value="CDVInAppBrowser" />
    </feature>
    <feature name="SplashScreen">
        <param name="ios-package" value="CDVSplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>Offering Kiosk</name>
    <description>
		Accept donations anywhere with Continue To Give's Offering Kiosk
	</description>
    <author email="continuetogive@continuetogive.com" href="http://continuetogive.com">
		Continue To Give Team
	</author>
    <content src="index.html" />
    <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />
    <icon gap:platform="ios" height="57" src="App_Resources/iOS/Icon57.png" width="57" />
    <icon gap:platform="ios" height="72" src="App_Resources/iOS/Icon72.png" width="72" />
    <icon gap:platform="ios" height="114" src="App_Resources/iOS/Icon114.png" width="114" />
    <icon gap:platform="ios" height="144" src="App_Resources/iOS/Icon144.png" width="144" />
    <gap:splash gap:platform="ios" height="1024" src="App_Resources/iOS/screen-ipad-portrait.png" width="768" />
    <gap:splash gap:platform="ios" height="768" src="App_Resources/iOS/screen-ipad-landscape.png" width="1024" />
    <gap:splash gap:platform="ios" height="480" src="App_Resources/iOS/Default.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="App_Resources/iOS/Default@2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1136" src="App_Resources/iOS/Default-568h@2x.png" width="640" />
    <gap:splash gap:platform="ios" height="748" src="App_Resources/iOS/Default-Landscape~ipad.png" width="1024" />
    <gap:splash gap:platform="ios" height="1004" src="App_Resources/iOS/Default-Portrait~ipad.png" width="768" />
    <gap:splash gap:platform="ios" height="1496" src="App_Resources/iOS/Default-Landscape@2x~ipad.png" width="2048" />
    <gap:splash gap:platform="ios" height="2008" src="App_Resources/iOS/Default-Portrait@2x~ipad.png" width="1536" />
    <access origin="*" />
</widget>
